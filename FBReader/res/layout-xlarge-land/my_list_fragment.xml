<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/afc_button_navi_left" />

        <!-- Platzhalter, damit kleiner-groesser buttons auseinander am Rand der View stehen -->
        <View
            android:layout_width="78dp"
            android:layout_height="45dp"
            android:layout_weight="0.02" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/afc_button_navi_right" />
    </LinearLayout>
	
    <!-- android:id/list und NICHT @id+/blabla, weil diese ListView  zur Laufzeit aufgesucht wird-->
    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:longClickable="true">
    </ListView>
    
    <!-- special id for TextView: wird angezeigt, wenn ListView oben keine Elemente drin hat -->
    <TextView
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:text="EPUB-Error: kein Inhaltsverzeichnis vorhanden!" />

    

</LinearLayout>