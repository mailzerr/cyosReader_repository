<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   	<WebView 
   	    android:id="@+id/webSearch"
   	    android:layout_width="wrap_content"
   	    android:layout_height="0dp"
   	    android:layout_weight="13"/>
 
   		<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" 
        android:layout_gravity="bottom"
        >

		<ImageButton
		    android:id="@+id/decrease"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="left|center_horizontal"
		    android:background="@android:color/transparent"
		    android:src="@drawable/decrease_land" />

        <!-- Platzhalter, damit kleiner-groesser buttons auseinander am Rand der View stehen -->

        <View
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_weight="1" />
        
        <ImageButton
		    android:id="@+id/close_websearch"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:background="@android:color/transparent"
		    android:src="@drawable/websearch_close" />
        
		<View
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_weight="1" />
            
        <ImageButton
            android:id="@+id/increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_horizontal"
            android:background="@android:color/transparent"
            android:src="@drawable/increase_land" />

    </LinearLayout>
   	
</LinearLayout>
